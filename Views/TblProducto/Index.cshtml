@*
    Index Producto
*@
@{ 
    ViewData["Title"] = "Producto";
}

@model List<Tblproducto>


<div class="container">
    <h2>Dark Striped Table</h2>
    <p>Combine .table-dark and .table-striped to create a dark, striped table:</p>
    <div div="well"><a class="btn btn-secondary" asp-action="Nuevo">NUEVO</a></div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>NOMBRE</th>
                <th>P. COMPRA</th>
                <th>P. VENTA</th>
                <th>STOCK</th>
                <th>ACCIONES</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StrNombre</td>
                    <td>@item.NumPrecioCompra</td>
                    <td>@item.NumPrecioVenta</td>
                    <td>@item.NumStock</td>
                    <td><a href="~/TBLproducto/Editar/@item.IdProducto" class="btn btn-info">EDITAR</a> <a href="~/TBLproducto/Borrar/@item.IdProducto" class="btn btn-danger">BORRAR</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

